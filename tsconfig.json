{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "docs/**/*",
    "scripts/**/*",
    "frontend/**/*",
    "cloudflare-workers/**/*",
    "mcp-servers/**/*",
    "**/*.example.js"
  ]
}
